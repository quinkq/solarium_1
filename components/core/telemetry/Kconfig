menu "TELEMETRY MQTT Configuration"

    config TELEMETRY_MQTT_BROKER_URI
        string "MQTT Broker URI"
        default "mqtt://192.168.1.100:1883"
        help
            URI of the MQTT broker (e.g., mqtt://broker.example.com:1883 or mqtts://broker.example.com:8883 for TLS)

    config TELEMETRY_MQTT_USERNAME
        string "MQTT Username"
        default "solarium"
        help
            Username for MQTT broker authentication

    config TELEMETRY_MQTT_PASSWORD
        string "MQTT Password"
        default "password"
        help
            Password for MQTT broker authentication

    config TELEMETRY_MQTT_CLIENT_ID
        string "MQTT Client ID"
        default "solarium_esp32"
        help
            Unique client identifier for this ESP32 device

endmenu
